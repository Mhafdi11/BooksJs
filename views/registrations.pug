extends layout

block content
  div(class="min-h-screen bg-gray-100 flex items-center justify-center")
    div(class="bg-white p-8 rounded shadow-md")
      h1(class="text-2xl font-semibold mb-4") Registration
      form(action="/register", method="POST")
        div(class="mb-4")
          label(for="username" class="block text-gray-600 text-sm font-semibold mb-2") Username:
          input(type="text", id="username", name="username", class="border border-gray-300 p-2 w-full rounded")
        div(class="mb-4")
          label(for="password" class="block text-gray-600 text-sm font-semibold mb-2") Password:
          input(type="password", id="password", name="password", class="border border-gray-300 p-2 w-full rounded")
        div(class="mt-4")
          input(type="submit", value="Register", class="bg-blue-500 text-white p-2 rounded cursor-pointer w-full")
